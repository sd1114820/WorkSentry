<Window x:Class="WorkSentry.Client.MainWindow" x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource AppTitle}"
        Icon="Assets/WorkSentry.ico"
        Width="920" Height="640"
        MinWidth="860" MinHeight="580"
        WindowStartupLocation="CenterScreen"
        Background="#F3F3F3"
        FontFamily="Segoe UI, Microsoft YaHei"
        ResizeMode="NoResize"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#2563EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="24,10" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D4ED8" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.92" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#9CA3AF" />
                                <Setter Property="BorderBrush" Value="#9CA3AF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="OutlineButton" TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#4B5563" />
            <Setter Property="BorderBrush" Value="#D1D5DB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="24,10" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB" />
                                <Setter Property="Foreground" Value="#2563EB" />
                                <Setter Property="BorderBrush" Value="#93C5FD" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.92" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#9CA3AF" />
                                <Setter Property="BorderBrush" Value="#E5E7EB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#EF4444" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#EF4444" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="24,10" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#DC2626" />
                                <Setter Property="BorderBrush" Value="#DC2626" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.92" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F3F4F6" />
                                <Setter Property="Foreground" Value="#9CA3AF" />
                                <Setter Property="BorderBrush" Value="#E5E7EB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TextButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#6B7280" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#DC2626" />
                                <Setter Property="Background" Value="#FEF2F2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#D1D5DB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F3F4F6" />
                                <Setter Property="Foreground" Value="#9CA3AF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="InputCombo" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#D1D5DB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="White" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Grid>
        <Border Margin="20" Background="White" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6">
            <Border.Effect>
                <DropShadowEffect BlurRadius="24" ShadowDepth="8" Color="#1F2937" Opacity="0.15" />
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="90" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#F8FAFC" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Vertical" Margin="32,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource AppTitle}" FontSize="22" FontWeight="SemiBold" Foreground="#1F2937" />
                            <Border Background="#E2E8F0" CornerRadius="10" Padding="6,2" Margin="12,0,0,0">
                                <TextBlock x:Name="VersionBadgeText" Text="v1.0.0" FontSize="11" Foreground="#64748B" />
                            </Border>
                        </StackPanel>
                        <TextBlock Text="{DynamicResource AppSubtitle}" FontSize="13" Foreground="#6B7280" Margin="0,4,0,0" />
                    </StackPanel>
                </Border>

                <Grid Grid.Row="1" Margin="32,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,24,0">
                        <Border x:Name="StatusCard" Background="#EFF6FF" BorderBrush="#DBEAFE" BorderThickness="1" CornerRadius="10" Padding="20" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource StatusLabel}" FontSize="12" Foreground="#2563EB" FontWeight="Bold" />
                                    <TextBlock x:Name="StatusValueText" Text="{DynamicResource StatusIdle}" FontSize="36" FontWeight="Bold" Foreground="#1F2937" Margin="0,8,0,0" />
                                </StackPanel>
                                <TextBlock x:Name="StatusIconText" Grid.Column="1" Text="â—" FontSize="48" Foreground="#BFDBFE" VerticalAlignment="Center" Margin="12,0,0,0" />
                            </Grid>
                        </Border>

                        <Grid>
                            <Border BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Padding="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <TextBlock Text="{DynamicResource LastReportLabel}" FontSize="12" Foreground="#9CA3AF" />
                                        <TextBlock x:Name="LastReportText" Text="{DynamicResource LastReportPlaceholder}" FontSize="16" Foreground="#374151" FontWeight="SemiBold" Margin="0,4,0,0" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1">
                                        <TextBlock Text="{DynamicResource UpdatePolicyLabel}" FontSize="12" Foreground="#9CA3AF" />
                                        <Border x:Name="UpdatePolicyBadge" Background="#F3F4F6" CornerRadius="4" Padding="6,2" HorizontalAlignment="Left" Margin="0,4,0,0">
                                            <TextBlock x:Name="UpdatePolicyText" Text="{DynamicResource UpdatePolicyHint}" FontSize="12" Foreground="#374151" />
                                        </Border>
                                    </StackPanel>

                                    <Border Grid.Row="1" Grid.ColumnSpan="2" BorderBrush="#F3F4F6" BorderThickness="0,1,0,0" Margin="0,16,0,0" Padding="0,12,0,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{DynamicResource ClientVersionLabel}" FontSize="12" Foreground="#9CA3AF" />
                                                <TextBlock x:Name="VersionText" Text="-" FontSize="13" Foreground="#374151" Margin="0,4,0,0" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                <TextBlock Text="{DynamicResource LatestVersionLabel}" FontSize="12" Foreground="#9CA3AF" TextAlignment="Right" />
                                                <TextBlock x:Name="LatestVersionText" Text="-" FontSize="13" Foreground="#374151" Margin="0,4,0,0" TextAlignment="Right" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                            <Border Background="White" Padding="4,0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12,-10,0,0">
                                <TextBlock Text="{DynamicResource MonitorInfoTitle}" FontSize="12" Foreground="#6B7280" FontWeight="SemiBold" />
                            </Border>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <Grid>
                            <Border BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Padding="20" Background="#FAFAFA">
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource EmployeeCodeLabel}" FontWeight="SemiBold" Foreground="#6B7280" Margin="0,0,0,6" />
                                    <TextBox x:Name="EmployeeCodeBox" Style="{StaticResource InputBox}" Height="36" />
                                    <TextBlock Text="{DynamicResource LanguageLabel}" FontWeight="SemiBold" Foreground="#6B7280" Margin="0,14,0,6" />
                                    <ComboBox x:Name="LanguageComboBox" Style="{StaticResource InputCombo}" Height="36" SelectedValuePath="Tag">
                                        <ComboBoxItem Content="{DynamicResource LanguageAuto}" Tag="auto" />
                                        <ComboBoxItem Content="{DynamicResource LanguageChinese}" Tag="zh-CN" />
                                        <ComboBoxItem Content="{DynamicResource LanguageEnglish}" Tag="en-US" />
                                        <ComboBoxItem Content="{DynamicResource LanguageVietnamese}" Tag="vi-VN" />
                                    </ComboBox>
                                    <Button x:Name="SaveButton" Content="{DynamicResource SaveConfigButton}" Style="{StaticResource OutlineButton}" Margin="0,16,0,0" Height="40" />
                                    <TextBlock Text="{DynamicResource ConfigHint}" FontSize="11" Foreground="#9CA3AF" TextWrapping="Wrap" Margin="0,16,0,0" />
                                </StackPanel>
                            </Border>
                            <Border Background="White" Padding="4,0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12,-10,0,0">
                                <TextBlock Text="{DynamicResource ConfigTitle}" FontSize="12" Foreground="#6B7280" FontWeight="SemiBold" />
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="2" Background="#F8FAFC" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
                    <Grid Margin="32,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="ExitButton" Content="{DynamicResource ExitButton}" Style="{StaticResource DangerButton}" VerticalAlignment="Center" Height="38" Padding="20,8" />
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Button x:Name="StopButton" Content="{DynamicResource StopButton}" Style="{StaticResource DangerButton}" Margin="0,0,12,0" IsEnabled="False" Visibility="Collapsed" />
                            <Button x:Name="StartButton" Content="{DynamicResource StartButton}" Style="{StaticResource PrimaryButton}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        <Grid x:Name="UpdateOverlay" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" CornerRadius="8" Padding="24" Width="420" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock x:Name="UpdateTitleText" Text="{DynamicResource UpdateTitleOptional}" FontSize="18" FontWeight="SemiBold" Foreground="#111827" />
                    <TextBlock x:Name="UpdateMessageText" Text="{DynamicResource UpdateMessageOptional}" FontSize="13" Foreground="#4B5563" Margin="0,8,0,0" TextWrapping="Wrap" />
                    <Border Background="#F3F4F6" CornerRadius="6" Padding="10" Margin="0,12,0,0">
                        <TextBlock Text="{DynamicResource UpdateHintText}" FontSize="12" Foreground="#6B7280" TextWrapping="Wrap" />
                    </Border>
                    <ProgressBar x:Name="UpdateProgressBar" Height="6" Margin="0,12,0,0" Minimum="0" Maximum="100" Visibility="Collapsed" />
                    <TextBlock x:Name="UpdateProgressText" Text="" FontSize="12" Foreground="#6B7280" Margin="0,6,0,0" Visibility="Collapsed" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                        <Button x:Name="UpdateLaterButton" Content="{DynamicResource UpdateLaterButton}" Style="{StaticResource OutlineButton}" Margin="0,0,12,0" />
                        <Button x:Name="UpdateNowButton" Content="{DynamicResource UpdateNowButton}" Style="{StaticResource PrimaryButton}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
